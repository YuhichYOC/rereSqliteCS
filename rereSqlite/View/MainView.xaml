    <UserControl.DataContext>
        <vm:MainViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="28" />
        </Grid.RowDefinitions>
        <TabControl
            Grid.Row="0"
            FontFamily="{Binding FontFamily}"
            FontSize="{Binding FontSize}">
            <TabItem>
                <TabItem.Header>
                    Page1
                </TabItem.Header>
                <page1:TabPage1View
                    DataContext="{Binding TabPage1ViewModel}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    Page2
                </TabItem.Header>
                <page2:TabPage2View
                    DataContext="{Binding TabPage2ViewModel}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    Page3
                </TabItem.Header>
                <page3:TabPage3View
                    DataContext="{Binding TabPage3ViewModel}" />
            </TabItem>
        </TabControl>
        <StatusBar
            Grid.Row="1">
            <combo:CustomComboBox
                MinWidth="180"
                FontSize="10"
                SourceTable="{Binding FontFamilies}"
                SelectedValue="{Binding FontFamily, Mode=TwoWay}" />
            <Slider
                MinWidth="180"
                Minimum="6"
                Maximum="24"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                Value="{Binding FontSize, Mode=TwoWay}" />
        </StatusBar>
    </Grid>
</UserControl>