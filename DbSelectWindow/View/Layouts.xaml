    <Style
        x:Key="ListBoxItemSelStyle"
        TargetType="ListBoxItem">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type ContentControl}">
                    <Border
                        Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger
                Property="IsSelected"
                Value="True">
                <Setter
                    Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush
                            EndPoint="0,1"
                            StartPoint="1,0">
                            <GradientStop
                                Color="Bisque"
                                Offset="0" />
                            <GradientStop
                                Color="Cyan"
                                Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <DataTemplate
        x:Key="Default">
        <StackPanel>
            <Label
                Content="{Binding Title}"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate
        x:Key="Add">
        <StackPanel>
            <Button
                Content="+"
                Command="{Binding NewCommand}"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate
        x:Key="Sqlite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}">
                Database type :
            </Label>
            <combo:CustomComboBox
                Grid.Row="0"
                Grid.Column="1"
                SourceTable="{Binding DbTypes}"
                SelectedValue="{Binding Type, Mode=TwoWay}"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}">
                Datasource :
            </Label>
            <Grid
                Grid.Row="1"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Text="{Binding DataSource, Mode=TwoWay}"
                    FontFamily="{Binding FontFamily}"
                    FontSize="{Binding FontSize}" />
                <Button
                    Grid.Column="1"
                    Content="..."
                    Command="{Binding SelectSqliteFileCommand}"
                    FontFamily="{Binding FontFamily}"
                    FontSize="{Binding FontSize}" />
            </Grid>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}">
                User id :
            </Label>
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding UserId, Mode=TwoWay}"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}" />
            <Label
                Grid.Row="3"
                Grid.Column="0"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}">
                Password :
            </Label>
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Password, Mode=TwoWay}"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FontSize}" />
        </Grid>
    </DataTemplate>
