    <Window.DataContext>
        <vm:OfWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="28" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="0, 0, 0, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TreeView
                Grid.Column="0"
                ItemsSource="{Binding Nodes}"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}">
                <TreeView.Resources>
                    <Style
                        TargetType="TreeViewItem">
                        <Setter
                            Property="IsExpanded"
                            Value="{Binding IsExpanded, Mode=OneWayToSource}" />
                        <Setter
                            Property="IsSelected"
                            Value="{Binding IsSelected, Mode=OneWayToSource}" />
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate
                        ItemsSource="{Binding Children}">
                        <TextBlock
                            Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <GridSplitter
                Grid.Column="0"
                Width="5" />
            <ListView
                Grid.Column="1"
                ItemsSource="{Binding Files}"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}">
                <ListView.Resources>
                    <Style
                        TargetType="ListViewItem">
                        <Setter
                            Property="IsSelected"
                            Value="{Binding IsSelected, Mode=OneWayToSource}" />
                    </Style>
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="120" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Text="{Binding SelectedPath, Mode=TwoWay}"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}" />
            <Button
                Grid.Column="1"
                Content="Open"
                Command="{Binding SelectFileCommand}"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:OfWindowView}}, Mode=OneWay}" />
        </Grid>
    </Grid>
</Window>